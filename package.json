{
  "name": "mathlive",
  "version": "0.23.0",
  "description": "Render and edit beautifully typeset math",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnog/mathlive.git"
  },
  "keywords": [
    "math",
    "editor",
    "javascript",
    "math-editing",
    "latex",
    "tex",
    "mathjax",
    "katex",
    "mathquill"
  ],
  "files": [
    "/dist",
    "/src",
    "/AUTHORS",
    "/LICENSE.txt"
  ],
  "main": "./dist/mathlive.js",
  "scripts": {
    "clean": "echo '\\033[0;32mClean...\\033[0m' && rimraf build dist docs",
    "build-js": "echo '\\033[0;32mESLint...\\033[0m' && eslint src/ -c .eslintrc.json",
    "watch-js": "esw -w src/",
    "build-css": "echo '\\033[0;32mCompile .less...\\033[0m' && lessc css/mathlive.core.less build/mathlive.core.css && lessc css/mathlive.less build/mathlive.css ",
    "watch-css": "npm run build-css && chokidar 'css/*.less' -c 'npm run build-css'",
    "build": "npm-run-all -p build-css build-js docs",
    "watch": "npm-run-all -p watch-css watch-js watch-docs watch-test",
    "start": "npm run watch",
    "dev": "npm run watch",
    "lint": "eslint src/ -c",
    "test": "tape -r babel-register test/*",
    "watch-test": "npm test && tape-watch test/* --watch",
    "coverage": "nyc node ./test/test.js && nyc report",
    "prepare": "npm run dist",
    "docs": "echo '\\033[0;32mBuild docs...\\033[0m' && jsdoc -c ./jsdoc.conf.json && echo \"docs.mathlive.io\" > docs/CNAME",
    "watch-docs": "npm run docs && chokidar 'src/*.js' '*.md' -c 'npm run docs'",
    "rollup": "echo '\\033[0;32mRollup...\\033[0m' && rollup --config",
    "dist": "npm run clean -s && npm run build -s && postcss build/*.css -d dist && npm run -s rollup"
  },
  "nyc": {
    "exclude": [
      "test",
      "**/debug.js",
      "dist",
      "build"
    ],
    "report-dir": "./build/coverage",
    "reporter": "html"
  },
  "engines": {
    "node": ">=8.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": "Arno Gourdol <arno@arno.org>",
  "contributors": [
    "Louis Larpin (lilfaf.github.io)",
    "Neil Soiffer (https://github.com/NSoiffer)",
    "Jason Boxman (https://github.com/jboxman)"
  ],
  "bugs": "https://github.com/arnog/mathlive/issues/",
  "devDependencies": {
    "autoprefixer": "^9.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "chokidar-cli": "^1.2.1",
    "cssnano": "^4.1.0",
    "eslint": "^5.5.0",
    "eslint-watch": "^4.0.2",
    "jsdoc": "^3.5.5",
    "less": "^3.9.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.0.1",
    "postcss-cli": "^5.0.1",
    "requirejs": "^2.3.6",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-copy": "^0.2.3",
    "sutro-jsdoc-theme": "github:arnog/sutro-jsdoc-theme",
    "tape": "^4.9.1",
    "tape-watch": "^2.3.0"
  }
}
